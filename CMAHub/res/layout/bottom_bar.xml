<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:background="#006569">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="2dip"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            
            <ImageView
                android:id="@+id/img_bottomtab_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:scaleType="matrix"
                android:src="@drawable/bottomtab_devices_pressed"
                />
                <!--  android:src="@drawable/bottomtab_devices_pressed" />-->
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前端设备"
                android:textColor="@color/actionbar_defaultTitleTextColor"
                android:textSize="12sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            
            <ImageView
                android:id="@+id/img_bottomtab_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:clickable="true"
                />
                <!--  android:src="@drawable/bottomtab_data_normal" />-->
            	
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="监测数据"
                android:textColor="@color/actionbar_defaultTitleTextColor"
                android:textSize="12sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            
            <ImageView
                android:id="@+id/img_bottomtab_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:clickable="true"
                />
                <!-- android:src="@drawable/bottomtab_services_normal" />-->
            	
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务管理"
                android:textColor="@color/actionbar_defaultTitleTextColor"
                android:textSize="12sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            
            <ImageView
                android:id="@+id/img_bottomtab_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:clickable="true"
                />
                <!--android:src="@drawable/bottomtab_settings_normal" />-->
            	
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/actionbar_defaultTitleTextColor"
                android:textSize="12sp" />
        </LinearLayout>
        
    </LinearLayout>
</RelativeLayout>