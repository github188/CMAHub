<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_workspace_layout"
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:background="@drawable/actionbar_background" >
    
    <LinearLayout
        android:id="@+id/title_city_manager_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/actionbar_background"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:background="@drawable/actionbar_btn"
            android:src="@drawable/title_city" />
        
        <ImageView 
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:background="@drawable/actionbar_btn"
            android:src="@drawable/title_city" />
        
        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:background="@color/actionbar_separator"
            android:gravity="center" />
        
        <LinearLayout
            android:id="@+id/titleRight"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal" >
            
            <FrameLayout 
                android:id="@+id/title_update"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:layout_gravity="center"
                android:clickable="true"
                android:paddingTop="2.0dip"
                android:background="@drawable/actionbar_btn">
  
                
                <ImageView
                    android:id="@+id/title_update_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/title_update" />
                
                <ProgressBar
                    android:id="@+id/title_update_progress"
                    style="@style/ActionBarProgressBar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:indeterminateOnly="true"
                    android:visibility="gone" />
                </FrameLayout>
        </LinearLayout>
        
        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:background="@color/actionbar_separator"
            android:gravity="center" />
        
        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="CMA在线配置工具"
            android:textColor="@color/actionbar_defaultTitleTextColor"
            android:textSize="@dimen/actionbar_defaultTitleTextSize" />

    </LinearLayout>
</RelativeLayout>